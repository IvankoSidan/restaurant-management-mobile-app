<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/payment_back"
    tools:context=".Presentation.Fragments.GuestFragment.FragmentBookingInfo">

    <TextView
        android:id="@+id/titleTableInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/book_info"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:ellipsize="none"
        android:breakStrategy="simple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTableNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:text=""
        android:textColor="@color/teal_200"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleSelectedTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/background_selected"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:text="@string/selected_table"
        android:textAlignment="center"
        android:textColor="#808080"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/titleTableNumber"
        app:layout_constraintStart_toEndOf="@+id/titleTableNumber"
        app:layout_constraintTop_toTopOf="@+id/titleTableNumber" />

    <ImageView
        android:id="@+id/btnCloseBookingInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/close_booking_info"
        app:layout_constraintBottom_toBottomOf="@+id/titleTableInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleTableInfo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tableInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/table_info"
        android:elevation="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btnCloseBookingInfo"
        app:layout_constraintStart_toStartOf="@+id/titleTableNumber"
        app:layout_constraintTop_toBottomOf="@+id/titleSelectedTable">

        <LinearLayout
            android:id="@+id/leftInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/floorView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/elevator" />

                <TextView
                    android:id="@+id/floorNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tableNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/table_name" />

                <TextView
                    android:id="@+id/tableName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tableCapacityView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_group_24" />

                <TextView
                    android:id="@+id/tableCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tableDescriptionView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/description_table" />

                <TextView
                    android:id="@+id/tableDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/bookingTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/calendar_view"
        app:layout_constraintStart_toStartOf="@+id/tableInfoLayout"
        app:layout_constraintTop_toBottomOf="@+id/tableInfoLayout" />

    <TextView
        android:id="@+id/bookingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/booking_title"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bookingTitleView"
        app:layout_constraintStart_toEndOf="@+id/bookingTitleView"
        app:layout_constraintTop_toTopOf="@+id/bookingTitleView" />

    <!-- Новый блок с тремя кнопками -->
    <LinearLayout
        android:id="@+id/buttonGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/bookingTitleView"
        app:layout_constraintStart_toStartOf="@id/tableInfoLayout"
        app:layout_constraintEnd_toEndOf="@id/tableInfoLayout">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnToday"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/today"
            android:textAllCaps="false"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="4dp"
            android:background="@drawable/border_cancel_1"
            android:textColor="#3C2F2F" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnWeek"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/week"
            android:textAllCaps="false"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/border_cancel_1"
            android:textColor="#3C2F2F" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCustomRange"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/custom_range"
            android:textAllCaps="false"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="4dp"
            android:background="@drawable/border_cancel_1"
            android:textColor="#3C2F2F" />
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookingInfoView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tableInfoLayout"
        app:layout_constraintStart_toStartOf="@+id/tableInfoLayout"
        app:layout_constraintTop_toBottomOf="@id/buttonGroup"
        tools:listitem="@layout/booking_info_item" />
</androidx.constraintlayout.widget.ConstraintLayout>
