<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp"
    android:background="#D3D3D3">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Верхний бар: titleTimeDuration убран -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tableNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="#1"
                android:textAlignment="center"
                android:textColor="#1890ff"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:background="@drawable/booking_number_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/titleCountGuest"
                app:layout_constraintBottom_toBottomOf="@+id/titleCountGuest" />

            <TextView
                android:id="@+id/titleCountGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="4 Гостя"
                android:textColor="#696969"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btnShowInfo"
                app:layout_constraintTop_toTopOf="@+id/btnShowInfo"
                app:layout_constraintBottom_toBottomOf="@+id/btnShowInfo" />

            <ImageView
                android:id="@+id/btnShowInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/keyboard_arrow_show_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/titleDateBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="15.06.2025"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/tableNumber"
                app:layout_constraintTop_toTopOf="@+id/tableNumber"
                app:layout_constraintBottom_toBottomOf="@+id/tableNumber" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Детали с новым TimeRange-блоком -->
        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/background_booking_info">

            <!-- Код брони -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/labelReservationCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_reservation_code"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#696969" />

                <TextView
                    android:id="@+id/valueReservationCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Статус -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/labelStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_status"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#696969" />

                <TextView
                    android:id="@+id/valueStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Продолжительность (labelDuration + valueDuration) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/labelDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_duration"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#696969" />

                <TextView
                    android:id="@+id/valueDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Диапазон времени (перенесённый titleTimeDuration) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelTimeRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_time_range"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#696969" />

                <TextView
                    android:id="@+id/titleTimeDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>